<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Faster" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/teal_200</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_700</item> <!-- changed for calendar background-->
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/teal_700</item>
        <!--temporarily given will create own theme for settings-->
        <item name="android:textColor">@color/teal_200</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Servicetheme" parent="Theme.AppCompat">
        <item name="android:background">#000</item>
        <item name="android:backgroundTint">#000</item>
    </style>
    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="PreferenceScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="alertDialogTheme">@style/DialogTheme</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorSecondary">#aaaaaa</item>
        <item name="android:colorAccent">#d19191</item>
        <item name="colorAccent">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
    <style name="PreferenceScreenSwich" parent="Theme.AppCompat">

        <item name="colorControlActivated">@color/teal_200</item>
        <!-- Inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f3f3f3</item>
        <!-- Inactive track color(30% transparency) -->
        <item name="android:colorForeground">#757575</item>
    </style>
    <style name="DialogTheme" parent="Theme.AppCompat.Dialog.Alert">
         <item name="android:colorBackground">#401212</item>
             <item name="android:textColorSecondary">#8d5400</item>
        <item name="textColorAlertDialogListItem">#eeeeee</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="colorOnPrimary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>


    <style name="my_calendar_theme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">#602727</item>                   <!--header background-->
        <item name="android:windowBackground">@color/teal_200</item>     <!--calendar background-->
        <item name="android:colorControlActivated">@color/teal_200</item> <!--selected day-->
        <item name="android:textColorPrimary">#ffffff</item> <!--days of the month-->
        <item name="android:textColorSecondary">#ffffff</item>    <!--days of the week-->
        <item name="colorPrimary">@color/teal_200</item>
    </style>

</resources>